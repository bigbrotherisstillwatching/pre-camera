<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MainActivityTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="GalleryActivityTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="SettingActivity" parent="android:Theme.Holo.Light">
    </style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/top_button_padding</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="BottomView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/bottom_bar_inner_margin</item>
        <item name="android:layout_marginTop">@dimen/bottom_bar_inner_margin</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@null</item>
    </style>
    <style name="BottomSeparatorView">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="TakedPictureImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="TakedPictureTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="GalleryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
